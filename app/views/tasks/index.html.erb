<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<p>
  <% if task.completed == true %>
  <input type="checkbox" checked>
  <% else %>
  <input type="checkbox" >
  <% end %>

  <%= link_to task.title, task_path(task.id) %>

  </p>
  <% end %>

 <p class="add-new"><%= link_to "+ Add new task", new_path %></p>

