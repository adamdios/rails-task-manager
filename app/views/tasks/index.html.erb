<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<p>
  <% if task.completed == true %>
  <input type="checkbox" checked>
  <% else %>
  <input type="checkbox" >
  <% end %>

  <%= link_to task.title, task_path(task.id) %>
  <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you sure you delete #{task.title}?" } do %>
        <%= "    -- Delete --" %>
      <% end %>
  </p>
  <% end %>

 <p class="add-new"><%= link_to "+ Add new task", new_path %></p>

